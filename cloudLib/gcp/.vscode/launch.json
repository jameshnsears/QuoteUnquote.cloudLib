{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "functions - mocha",
      "program": "${workspaceFolder}/functions/node_modules/mocha/bin/_mocha",
      "args": [
        "--inspect-brk",
        "${workspaceFolder}/functions/test/*.js"
      ],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "${workspaceFolder}/config/virtual-ego-281313.json"
      },
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "functions - express+curl",
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "${workspaceFolder}/config/virtual-ego-281313.json"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/functions/index.js",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}